
@{
    ViewData["Title"] = "customerAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Customer>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3 class="text-center">Update your Profile</h3>
            <form  method="post">
                <div class="mt-3">
                <input type="text" value="" placeholder="Enter your Name" name="Customer_name" value="@Model[0].Customer_name" class="form-control" />
                </div>
                <div class="mt-3">
                    <input type="text" value="" placeholder="Enter your Phone" name="Customer_phone" value="@Model[0].Customer_phone" class="form-control" />
                </div>
                <div class="mt-3">
                    <input type="text" value="" placeholder="Enter your email" name="Customer_email" value="@Model[0].Customer_email" class="form-control" />
                </div>
                 <div class="mt-3">
                    <input type="text" value="" placeholder="Enter your Password" name="Customer_password" value="@Model[0].Customer_password" class="form-control" />
                </div>
                 <div class="mt-3">
                    <input type="text" value="" placeholder="Enter your Gender" name="Customer_gender" value="@Model[0].Customer_gender" class="form-control" />
                </div>
                <div class="mt-3">
                    <input type="text" value="" placeholder="Enter your Country" name="Customer_country" value="@Model[0].Customer_country" class="form-control" />
                </div>
                <div class="mt-3">
                    <input type="text" value="" placeholder="Enter your City" name="Customer_city" value="@Model[0].Customer_city" class="form-control" />
                </div>
                <div class="mt-3 ">
                    <input type="text" value="" placeholder="Enter your Address" name="Customer_address" value="@Model[0].Customer_address" class="form-control" />
                </div>
                <input type="button" class="btn btn-primary mt-3" value="update profile" />
            </form>
            </div>
            <div class="col-md-2"></div>
    </div>
</div>

